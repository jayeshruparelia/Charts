
@{
    ViewBag.Title = "DB CO2 footprints ";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12 p2">
            <div class="card bg-warning">
                <div class="card body text-center">
                    <h1>25%</h1>
                </div>
            </div>
        </div>
        <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12 p2">
            <div class="card bg-danger">
                <div class="card body text-center">
                    <h1>100 kg</h1>
                </div>
            </div>
        </div>
    </div>
    <div class="row pb-5" />
    <div class="row">
        <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12 p2">
            <div class="card" style="min-height: 100px">
                <div class="card body">
                    <div id="chartContainer2" style="width: 100%; height: 300px;display: inline-block;"></div>
                </div>
            </div>
        </div>
        <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12 p2">
            <div class="card">
                <div class="card body">
                    <div id="chartContainer3" style="width: 100%; height: 300px;display: inline-block;"></div>
                </div>
            </div>
        </div>
    </div>

</div>




<script type="text/javascript">

    var chart2 = new CanvasJS.Chart("chartContainer2", {
        title: {
            text: "Overall food wastaged in a year (%)"
        },
        animationEnabled: true,
        legend: {
            verticalAlign: "center",
            horizontalAlign: "left",
            fontSize: 18,
            fontFamily: "Helvetica"
        },
        theme: "dark2",
        data: [
        {
            type: "pie",
            indexLabelFontFamily: "Helvetica",
            indexLabelFontSize: 20,
            indexLabel: "{label} {y}%",
            startAngle: -20,
            toolTipContent: "{legendText} {y}%",

            dataPoints: @Html.Raw(ViewBag.PieDataPoints)
        }
        ]
    });
    chart2.render();

    var chart3 = new CanvasJS.Chart("chartContainer3",
    {
        theme: "dark2",
        animationEnabled: true,
        title: {
            text: "Top 5 Cities"
        },
        axisY: {
            title: "Food Wasted (in kg)",
        },
        data: [{
            type: "column",
            showInLegend: true,
            legendMarkerColor: "grey",
            dataPoints: @Html.Raw(ViewBag.Top10CityDataPoints)
            //dataPoints: [
            //        {y: 297571, label: "Venezuela"},
            //        {y: 267017,  label: "Saudi" },
            //        {y: 175200,  label: "Canada"},
            //        {y: 154580,  label: "Iran"},
            //        {y: 116000,  label: "Russia"},
            //        {y: 97800, label: "UAE"},
            //        {y: 20682,  label: "US"},
            //        {y: 20350,  label: "China"}
            //]
        }]
    });
    chart3.render();


</script>
