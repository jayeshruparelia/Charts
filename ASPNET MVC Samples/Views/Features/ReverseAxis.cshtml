
@{
    ViewBag.Title = "Reverse Axis";
}

<div id="chartContainer"></div>

<script type="text/javascript">

    $(function () {
        var chart = new CanvasJS.Chart("chartContainer", {
            theme: "light2",
            animationEnabled: true,
            title: {
                text: "Column Chart with Reversed Y Axis"
            },
            axisY: {
                title: "Reversed Axis",
                reversed: true
            },
            data: [
            {
                type: "column",
                dataPoints: [
                    { y: 6, label: "Apple" },
					{ y: 4, label: "Mango" },
					{ y: 5, label: "Orange" },
					{ y: 7, label: "Banana" },
					{ y: 4, label: "Pineapple" },
					{ y: 6, label: "Pears" },
					{ y: 7, label: "Grapes" },
					{ y: 5, label: "Lychee" },
					{ y: 4, label: "Jackfruit" }
                ],

                //dataPoints: @Html.Raw(ViewBag.DataPoints),
            }
            ]
        });
        chart.render();
    });
</script>
